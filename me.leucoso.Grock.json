{
    "app-id": "me.leucoso.Grock",
    "runtime": "org.gnome.Platform",
    "runtime-version": "44",
    "sdk": "org.gnome.Sdk",
    "command": "grock",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--system-talk-name=org.freedesktop.GeoClue2",
        "--device=dri"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        "shared-modules/clutter/clutter.json",
        "shared-modules/libsoup/libsoup-2.4.json",
        {
            "name" : "libchamplain",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://codeberg.org/dburgess/libchamplain-wms.git",
                    "tag" : "v1.0.0",
                    "commit" : "ec6cc2f9d85a2295df7684aa1ed28d077e36cdeb"
                }
            ]
        },
        {
            "name" : "geocode-glib",
            "buildsystem" : "meson",
            "builddir" : true,
            "config-opts" : [
                "-Denable-gtk-doc=false"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://download.gnome.org/sources/geocode-glib/3.26/geocode-glib-3.26.4.tar.xz",
                    "sha256" : "2d9a6826d158470449a173871221596da0f83ebdcff98b90c7049089056a37aa"
                }
            ]
        },
        {
            "name" : "proj",
            "buildsystem" : "cmake-ninja",
            "config-opts" : [
                "-DBUILD_TESTING=OFF"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://github.com/OSGeo/PROJ/releases/download/9.2.0/proj-9.2.0.tar.gz",
                    "sha256" : "dea816f5aa732ae6b2ee3977b9bdb28b1d848cf56a1aad8faf6708b89f0ed50e"
                }
            ]
        },
        {
            "name": "grock",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://codeberg.org/dburgess/Grock.git",
                    "tag": "v1.0.0",
                    "commit": "7a3bc912048e38013e8f77ffca4bc23532a4d2dc"
                },
                {
                    "type": "patch",
                    "path": "screenshot-url.patch"
                }
            ]
        }
    ]
}
